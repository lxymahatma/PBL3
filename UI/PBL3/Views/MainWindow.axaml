<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PBL3.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ext="clr-namespace:PBL3.Extensions.MarkupExtensions"
        xmlns:contract="clr-namespace:PBL3.Contracts"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PBL3.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        DataContext="{ext:DependencyInjection Type=contract:IMainWindowViewModel}"
        Icon="/Assets/avalonia-logo.ico"
        Title="PBL3">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid ShowGridLines="True" ColumnDefinitions="Auto,Auto" RowDefinitions="Auto,Auto">
        <StackPanel Grid.Row="0" Grid.Column="0"
                    Width="100" />
        <TextBox Grid.Row="0" Grid.Column="1"
                 Width="500"
                 Text="{Binding SearchText}"
                 VerticalContentAlignment="Center"
                 Watermark="Search Course">
            <TextBox.InnerRightContent>
                <Button Command="{Binding SearchCommand}">
                    <PathIcon Data="{StaticResource Magnify}" Height="30" Width="30" />
                </Button>

            </TextBox.InnerRightContent>
        </TextBox>
    </Grid>

</Window>