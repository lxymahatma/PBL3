<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:contract="using:PBL3.Contracts.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ext="using:PBL3.Extensions.MarkupExtensions"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:PBL3.ViewModels.Windows"
        x:Class="PBL3.Views.Windows.PopupWindow"
        Title="{Binding Title}"
        Width="400"
        Height="450"
        d:DesignHeight="450"
        d:DesignWidth="400"
        x:DataType="vm:PopupWindowViewModel"
        DataContext="{ext:DependencyInjection Type=contract:IPopupWindowViewModel}"
        mc:Ignorable="d">

    <Design.DataContext>
        <vm:PopupWindowViewModel />
    </Design.DataContext>

    <Interaction.Behaviors>
        <EventTriggerBehavior EventName="Closing">
            <InvokeCommandAction />
        </EventTriggerBehavior>
    </Interaction.Behaviors>

    <UserControl Content="{Binding Content}" />

</Window>